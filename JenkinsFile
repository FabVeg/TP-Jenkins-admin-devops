pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Récupère le code source depuis le repo Git
                git branch: 'main', url: 'https://github.com/FabVeg/TP-Jenkins-admin-devops.git'
            }
        }

        stage('Setup Python') {
            steps {
                script {
                    // Installe Python et les dépendances si nécessaire
                    sh 'python3 -m venv venv'
                    sh 'source venv/bin/activate && pip install -r requirements.txt || echo "No dependencies"'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Exécute les tests unitaires
                    sh 'source venv/bin/activate && python -m unittest discover -s . -p "test_*.py"'
                }
            }
        }

        stage('Cleanup') {
            steps {
                sh 'rm -rf venv' // Nettoyage après exécution
            }
        }
    }
}